{
  "manifest_version": 2,
  "name": "XactTools",
  "version": "0.8",

  "description": "Suite of tools for support technicians - Dog Food Only",

  "omnibox": {
    "keyword": "xact"
  },

  "browser_action": {
    "default_popup": "/src/action/index.html"
  },

  "background": {
    "scripts": [
      "/src/resend_assignment.js"
    ]
  },

  "permissions": [
    "*://*/",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.xactware.com/kcm/search", "https://*.xactware.com/kcm/search/*"],
      "js": ["/src/kcm_xna.js"]
    }
  ]
}
