{
  "manifest_version": 2,
  "name": "XactTools",
  "version": "0.8.3",

  "description": "Suite of tools for support technicians - Dog Food Only",

  "omnibox": {
    "keyword": "xact"
  },

  "browser_action": {
    "default_popup": "/pages/action/index.html"
  },

  "background": {
    "scripts": [
      "/src/license_admin.js",
      "/src/login.js",
      "/src/open_assignment.js",
      "/src/resend_assignment.js"
    ]
  },

  "permissions": [
    "*://*/",
    "storage",
    "tabs",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.xactware.com/kcm/search", "https://*.xactware.com/kcm/search/*"],
      "js": ["/src/kcm_xna.js"]
    }
  ],

  "options_page": "/pages/settings/index.html"
}
